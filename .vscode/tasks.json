{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/native/"
            },
            "command": "scons",
            "args": [
                "compiledb=yes",
                "dev_build=yes"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "group": "none",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/native/"
            },
            "command": "scons",
            "args": [
                "--clean",
                "compiledb=yes",
                "dev_build=yes"
            ],
            "problemMatcher": [],
        },
        {
            "label": "make compile_commands.json",
            "group": "none",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/native/"
            },
            "command": "scons",
            "args": [
                "compiledb=yes",
                "dev_build=yes",
                "compile_commands.json"
            ],
            "problemMatcher": [],
        }
    ]
}